<mujoco model="Kangaroo">
  <compiler angle="degree" inertiafromgeom="true"/>
  <option timestep="0.001" integrator="RK4"/>
  <visual>
    <map znear="0.02"/>
  </visual>
  <worldbody>
    <light cutoff="100" diffuse="1 1 1" dir="-0 0 -1.3" directional="true" exponent="1" pos="0 0 1.3" specular=".1 .1 .1"/>
    <geom conaffinity="1" condim="3" pos="-18 0 0" size="20 1 0.125" type="plane" rgba="0 0.4 0 1"/>
    <body name="torso" pos="0 0 2">
      <camera name="track" mode="trackcom" pos="0 -3 -0.25" xyaxes="1 0 0 0 0 1"/>
      <joint armature="0" axis="1 0 0" damping="0" limited="false" name="x" pos="0 0 0" stiffness="0" type="slide"/> <!-- lets us move in x axis -->
      <joint armature="0" axis="0 0 1" damping="0" limited="false" name="z" pos="0 0 0" stiffness="0" type="slide"/> <!-- lets us move in z axis -->
      <joint armature="0" axis="0 1 0" damping="0" limited="false" name="y" pos="0 0 0" stiffness="0" type="hinge"/> <!-- lets us rotate along the y axis -->
      <geom type="capsule" size="0.1 0.2" rgba="0.184 0.31 0.31 1" mass="5"/> <!-- torso shape -->
      <body name="tail" pos="0 0 -0.2">
        <joint axis="0 1 0" name="tail_joint" range="-90 90" type="hinge"/>
        <geom type="capsule" axisangle="0 1 0 90" size="0.075 0.3" pos="-0.3 0 0" rgba="0.184 0.31 0.31 1" mass="1.2"/> <!-- tail shape -->
      </body>
      <body name="leg" pos="0 0 -0.2">
        <joint axis="0 1 0" name="leg_joint" range="-90 90" type="hinge"/>
        <geom size="0.05 0.4" pos="0 0 -0.4" type="cylinder" mass="1" rgba="0.44 0.5 0.56 1"/>
        <body name="foot" pos="0 0 -0.75">
          <joint axis="0 0 -1" name="foot_joint" springref="0" springdamper="1 0.5" range="-0.4 0.4" pos="0 0 0" type="slide"/> <!-- springdamper="time_constant damping_ratio" -->
          <geom size="0.025 0.4" pos="0 0 0" type="cylinder" mass="0.1" rgba="0 0.9 0.9 1"/>
          <geom size="0.05" pos="0 0 -0.4" mass="0.1" rgba="0.9 0.9 0.9 1"/>
        </body>
      </body>
    </body>
  </worldbody>
  <actuator>
    <general ctrllimited="true" ctrlrange="-1.0 1.0" gear="20.0" joint="leg_joint" gainprm="1"/>
    <general ctrllimited="true" ctrlrange="-1.0 1.0" gear="300.0" joint="foot_joint" gainprm="1"/>
  </actuator>
</mujoco>
